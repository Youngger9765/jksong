<div class="container" id="issue-show">
  <div class="row">
    <% @issues.each do |i| %>
      <% if current_user &&  !@profile.vote_issue?(i)%>
        <div class="col-md-3 not-voted" id="issue_board">
            <h3><%= link_to i.name, issue_path(i) %></h3>
            <div id="issue_photo">
              <% if i.logo.exists? %>
                <%= link_to image_tag(i.logo.url(:original)),issue_path(i)%>
              <%end%>
            </div>
        </div>
      
      <%elsif current_user && @profile.vote_issue?(i)%>
        <div class="col-md-3 voted" id="issue_board">
            <h3><%= link_to i.name, issue_path(i) %></h3>
            <div id="issue_photo">
              <%= link_to image_tag("taiwan-vote.gif"),issue_path(i) %>
            </div>
        </div>

      <%else%>
        <div class="col-md-3 not-voted" id="issue_board">
            <h3><%= link_to i.name, issue_path(i) %></h3>
            <div id="issue_photo">
              <% if i.logo.exists? %>
                <%= link_to image_tag(i.logo.url(:original)),issue_path(i)%>
              <%end%>
            </div>
        </div>
      <%end%>

      
    <% end %>
  </div>
</div>





<h1>熱門時事議題</h1>


<br>

<div class="container">
  <div class="row">
    <% @issues.each do |i| %>
      <div class="col-md-4" id="issue_board">
          <ul>
            <h1><%= link_to i.name, issue_path(i) %></h1>
            <a href="<%= issue_path(i)%>"><img src="http://farm9.staticflickr.com/8448/7901449658_2bca50ca32.jpg" alt="" id="issues_photo" ></a>
            
          </ul>
      </div>
    <% end %>
  </div>
</div>

<%= paginate @issues %>
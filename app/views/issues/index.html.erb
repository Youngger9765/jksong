<h1>議題 Index</h1>


<br>
<table class="table">
  <tr>
    <td>分類</td>
    <td>議題名稱</td>
    <td>議題內容</td>
  </tr>

  <% @issues.each do |i| %>
    <tr>
      <td><%= i.category.name%></td>
      <td><%= link_to i.name, issue_path(i) %></td>
      <td><%= i.content %></td>
    </tr>
  <% end %>

</table>

<%= paginate @issues %>
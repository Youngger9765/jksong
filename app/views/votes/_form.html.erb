<div class="form-group">
  <%= f.label :new_content, "法案白話文" %>
  <%= f.text_field :new_content, :class => "form-control" %>
</div>

<div class="form-group">
  <%= f.label :original_content, "法案原文" %>
  <%= f.text_field :original_content, :class => "form-control" %>
</div>


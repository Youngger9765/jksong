<!DOCTYPE html>
<html>
<head>
  <title>Jksong</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook),:class => "btn btn-primary" %>
      <% if current_user %>
          <%= current_user.email%>
          <%= link_to('登出', destroy_user_session_path, :method => :delete) %> |
          <%= link_to('修改密碼', edit_registration_path(:user)) %>
      <% else %>
          <%= link_to('註冊', new_registration_path(:user)) %> |
          <%= link_to('登入', new_session_path(:user)) %>
      <% end %>

      <h1>政客爽</h1>
        <% if flash[:notice].present? %>
          <div style = "color: green">
            <%= flash[:notice]%>
          </div>
        <% end %>

        <% if flash[:alert].present? %>
          <div style = "color: red">
            <%= flash[:alert]%>
          </div>
        <% end %>

        <%= link_to "法案", votes_path,:class => "btn btn-default"%>
        <%= link_to "議題", issues_path,:class => "btn btn-default"%>

        <%= link_to "關於我們", about_path ,:class => "btn btn-default"%>
        <%= link_to "管理者", admin_users_path ,:class => "btn btn-default"%>

<%= yield %>


    </div>
  </div>
</div>

</body>
</html>

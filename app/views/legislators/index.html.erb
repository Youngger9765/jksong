<h1 class="text-center page_title">
  第八屆立法委員
</h1>

<div class="col-md-2"></div>

<div class="col-md-8 ">
  <table class="table" >

    <tr>
      <td id="category_area">
        <div class="btn btn-primary btn-lg">
          分類領域
        </div>
      </td>
      <td class="raking">
        <%= image_tag("1st.png")%>
      </td>
      <td class="raking">
        <%= image_tag("2nd.png")%>
      </td>
      <td class="raking">
        <%= image_tag("3rd.png")%>
      </td>
    </tr>
    
    <% @higher_legislators_by_categories.each do |c, lhl|%>
      <tr>
        <td class="le-cate">
          <%= render :partial => 'category_icon', :locals => { :name => lhl[:name]} %>
          <%if lhl[:name] =="總票數"%>
            <div>
              <%=link_to lhl[:name],legislators_path,:class =>"btn btn-danger btn-lg"%>
            </div>
          <%else%>
            <div>
              <%=link_to lhl[:name],legislators_path,:class =>"btn btn-info btn-lg"%>
            </div>
          <%end%>

          
        </td>
        <td>
          <%= render :partial => 'legislators', :locals => { :le => lhl[:rank][0]}%>   
        </td>
        <td>
           <%= render :partial => 'legislators', :locals => { :le => lhl[:rank][1]}%>
        </td>
        <td>
          <%= render :partial => 'legislators', :locals => { :le => lhl[:rank][2]}%>
        </td>
      </tr>
    <%end%>
  </table>

</div>
